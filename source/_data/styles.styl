//单句代码 
p code, li code {
    font-size: 14px;
    line-height: 2.0em;
    color: #333;
    font-weight: bold;
    // border: 1px solid #ebc65a;
    background: #fff;
    box-shadow: 0.2em 0.2em 0 0 #ebc65a;
    padding: 0.1em 0.4em;
    margin: 0 0.4em;
    vertical-align: bottom;
}

//注释引用
blockquote {
    color: #01579b;
    /* margin-top: 25px; */
    margin-top: 16px;
    border-left: 4px solid #abd4e7db;
    background-color: #e1f5fe4f;
}

//注释里的代码
blockquote code {
    color: #01579b;
    font-weight: bold;
    border: 1px solid #ebc65a00;
    background: #e1f5fe4f;
    box-shadow: 0.2em 0.2em 0 0 #abd4e7db;
    padding: 0.1em 0.4em;
    margin: 0 0.4em;
    vertical-align: bottom;
    line-height: 2.0em;
    font-size: 14px;
}


