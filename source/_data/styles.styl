// 主页文章添加阴影
.post {
   margin-top: 20px;  //大小自行调整 
   margin-bottom: 20px; //大小自行调整
   padding: 10px;      //大小自行调整
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}
//背景色 链接悬浮色
:root {
    --body-bg-color: #f9dbb647;
    --link-hover-color: #f37979;//
}
//标题颜色黑色
.site-title {
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    font-size: 1.375em;
    font-weight: normal;
    margin: 0;
    color: #222;
}
//标题带去除
.brand {
    background: #2220;
}
//侧边栏深黑
.sidebar {
    background: hsl(0, 0%, 8%);
    bottom: 0;
    box-shadow: inset 0 2px 6px #000;
    position: fixed;
    top: 0;
}

//小句代码 黑底白字 透明度调整
code {
    background: #230101a8;
    border-radius: 3px;
    color: #ffffff;
    padding: 1px 4px;
    overflow-wrap: break-word;
    overflow-wrap: break-word;
    word-wrap: break-word;
}

//链接色 
a, span.exturl {
    border-bottom: 1px solid #999;
    color: #ea0e0e;
    outline: 0;
    text-decoration: none;
    overflow-wrap: break-word;
    word-wrap: break-word;
    cursor: pointer;
}

//1级标题
h1 {
    font-size: 2.0em;
    color: #ea0e0e;
}

h2 {
    font-size: 1.75em;
    color: #1478ce;
}

h3 {
    font-size: 1.5em;
    color: orange;
}

h4 {
    font-size: 1.25em;
    color: #1db70b;
}

h5 {
    font-size: 1em;
    color: darkblue;
}