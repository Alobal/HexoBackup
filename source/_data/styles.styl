.footer {
    color: #f7f4f4;
}

//标题带去除
.brand {
    background: #2220;
}
//侧边菜单栏
.header-inner {
    background: #ffffffff;
}

//侧边选中菜单
.menu-item-active a {
    background: rgba(255,255,255,0.5);
    border-radius: 50px 0 0 50px;
    border-color: transparent;
    box-shadow: 0 8px 20px -8px rgba(0,0,0,0.3);
}

//侧边菜单 悬浮时
.menu .menu-item a:hover, .menu-item-active a {
    background: #e1f5fe;
    border-radius: 50px 0 0 50px;
    border-color: transparent;
    box-shadow: 0 8px 20px -8px rgba(0,0,0,0.3);
    color: #01579b;
    font-weight: bold;
}

//侧边选中小点点
.main-menu .menu-item-active a::after {
    // background: #77a1b1;
}


